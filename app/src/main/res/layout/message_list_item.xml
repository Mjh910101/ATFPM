<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_listItem_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_background_gray_frame_0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/message_listItem_messageTap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/tap_bg"
            android:gravity="center_vertical|right"
            android:text="协会动态"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/message_listItem_messageTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/message_listItem_messageTap"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />
    </RelativeLayout>

    <View
        android:id="@+id/message_listItem_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray_01" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <LinearLayout
            android:id="@+id/message_listItem_userIconBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/message_listItem_userIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test_u_i" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_listItem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:text="时间"
            android:textColor="@color/text_green_01"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/message_listItem_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/message_listItem_time"
            android:layout_toRightOf="@id/message_listItem_userIconBox"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="用户名"
            android:textColor="@color/text_gray_01"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message_listItem_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="内容"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>