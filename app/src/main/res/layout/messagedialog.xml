<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_stype_04"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/messageDialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

    <TextView
        android:id="@+id/messageDialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/messageDialog_commitBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="6dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/messageDialog_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/green_background_green_frame_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/messageDialog_cancelBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/messageDialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/white_background_green_frame_circle"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/cancel"
                android:textColor="@color/text_green_01"
                android:textSize="@dimen/text_size_17" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>