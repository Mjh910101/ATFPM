<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_background_green_frame_0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/forget_v2_telIcon"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@drawable/tel_num" />

                    <TextView
                        android:id="@+id/forget_v2_telCodeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLength="2"
                        android:text="@string/cade_mo_s_name"
                        android:textColor="@color/text_green_01"
                        android:textSize="@dimen/text_size_17" />

                    <TextView
                        android:id="@+id/forget_v2_telCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/forget_v2_telCodeName"
                        android:text="+853"
                        android:textColor="@color/text_green_01"
                        android:textSize="@dimen/text_size_17" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/forget_v2_telCode"
                        android:layout_alignTop="@id/forget_v2_telCode"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/forget_v2_telCode"
                        android:background="@color/line_gray_01" />

                    <EditText
                        android:id="@+id/forget_v2_telInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/forget_v2_telCode"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/input_stype_lucency"
                        android:hint="@string/input_tel"
                        android:inputType="number"
                        android:textSize="@dimen/text_size_17" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/must"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_15" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/white_background_green_frame_0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/forget_v2_passwordIcon"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password_icon" />

                    <EditText
                        android:id="@+id/forget_v2_passwordInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/forget_v2_passwordIcon"
                        android:background="@drawable/input_stype_lucency"
                        android:hint="@string/input_password"
                        android:inputType="textPassword"
                        android:textSize="@dimen/text_size_17" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/must"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_15" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:id="@+id/forget_v2_passwordJudge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password_true"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/forget_v2_passwordJudge"
                        android:background="@drawable/white_background_green_frame_0" >

                        <ImageView
                            android:id="@+id/forget_v2_passwordAgainIcon"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/password_icon" />

                        <EditText
                            android:id="@+id/forget_v2_passwordAgainInput"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/forget_v2_passwordAgainIcon"
                            android:background="@drawable/input_stype_lucency"
                            android:hint="@string/input_password_again"
                            android:inputType="textPassword"
                            android:textSize="@dimen/text_size_17" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/must"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/forget_v2_forgetBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/bg_stype_green"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/forget_v2_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/Hua/StudioProjects/ATFPM/app/src/main/res/layout/activity_forget_v2.xml -->